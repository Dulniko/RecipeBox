{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-6">Recipe Details</h1>

    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
        <table class="min-w-full bg-white">
            <tbody>
                <tr class="border-b">
                    <th class="py-2 px-4 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Id</th>
                    <td class="py-2 px-4">{{ recipe.id }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-2 px-4 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Title</th>
                    <td class="py-2 px-4">{{ recipe.title }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-2 px-4 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Author</th>
                    <td class="py-2 px-4">{{ recipe.author ? recipe.author.email : 'Anonymous' }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-2 px-4 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Description</th>
                    <td class="py-2 px-4">{{ recipe.description }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-2 px-4 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Instruction</th>
                    <td class="py-2 px-4">{{ recipe.instruction }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-2 px-4 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Categories</th>
                    <td class="py-2 px-4">
                        {% for category in recipe.categories %}
                            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">{{ category.name }}</span>
                        {% endfor %}
                    </td>
                </tr>
                <tr class="border-b">
                    <th class="py-2 px-4 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Tags</th>
                    <td class="py-2 px-4">
                        {% for tag in recipe.tags %}
                            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">{{ tag.name }}</span>
                        {% endfor %}
                    </td>
                </tr>
                <tr class="border-b">
                    <th class="py-2 px-4 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Created at</th>
                    <td class="py-2 px-4">{{ recipe.createdAt ? recipe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-2 px-4 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Updated at</th>
                    <td class="py-2 px-4">{{ recipe.updatedAt ? recipe.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="flex space-x-4">
        <a href="{{ path('app_recipe_index') }}" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">Back to list</a>
        <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Edit</a>

        {{ include('recipe/_delete_form.html.twig') }}
    </div>
{% endblock %}
