{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-6">Register</h1>

    {{ form_errors(registrationForm, {'attr': {'class': 'text-red-500 text-sm'}}) }}

    {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
        <div class="form-group">
            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            {{ form_errors(registrationForm.email, {'attr': {'class': 'text-red-500 text-xs italic'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'text-red-500 text-xs italic'}}) }}
        </div>
        <div class="form-group flex items-center">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2'}}) }}
            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'text-gray-700'}}) }}
            {{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'text-red-500 text-xs italic'}}) }}
        </div>

        <div class="flex items-center justify-between">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Register
            </button>
        </div>
    {{ form_end(registrationForm) }}
{% endblock %}
