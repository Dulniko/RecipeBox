{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-6">Category Details</h1>

    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
        <table class="min-w-full bg-white">
            <tbody>
                <tr class="border-b">
                    <th class="py-2 px-4 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Id</th>
                    <td class="py-2 px-4">{{ category.id }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-2 px-4 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Name</th>
                    <td class="py-2 px-4">{{ category.name }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-2 px-4 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Created_at</th>
                    <td class="py-2 px-4">{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-2 px-4 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Updated_at</th>
                    <td class="py-2 px-4">{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="flex space-x-4">
        <a href="{{ path('app_category_index') }}" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">Back to list</a>
        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Edit</a>

        {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}
